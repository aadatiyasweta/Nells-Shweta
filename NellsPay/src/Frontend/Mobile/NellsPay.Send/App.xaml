<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="NellsPay.Send.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NellsPay.Send"
    xmlns:local2="clr-namespace:NellsPay.Send.Extensions">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                 <ResourceDictionary Source="Resources/Converters.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="Resources/Styles/Icons.xaml" />
            <local2:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <Style x:Key="HeaderLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="{AppThemeBinding Light={DynamicResource HeaderTextColor}, Dark={DynamicResource LightBackgroundColor}}" />
                <Setter Property="FontFamily" Value="SFBlackMedium" />
            </Style>
            <Style x:Key="SecondLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="{AppThemeBinding Light={DynamicResource SecondTextColor}, Dark={DynamicResource SecondTextColor}}" />
                <Setter Property="FontFamily" Value="SFBlackMedium" />
            </Style>
            <Style x:Key="SelectedGridStyle" TargetType="Grid">
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="Selected">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="#CCD3EB" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
            <Style x:Key="MainButton" TargetType="Button">
                <Setter Property="TextColor" Value="{DynamicResource White}" />
                <Setter Property="BackgroundColor" Value="{DynamicResource NpBlue}" />
                <Setter Property="FontFamily" Value="SFBlackMedium" />
                <Setter Property="FontSize" Value="12" />
            </Style>
            <Style x:Key="BorderBackground" TargetType="Border">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={DynamicResource BorderBGColorLight}, Dark={DynamicResource DarkColor100}}" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
