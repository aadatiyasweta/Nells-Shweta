<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NellsPay.Send.Views.Verifyidentity.CameraPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
    Title="CameraPage"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Background="{AppThemeBinding Light={DynamicResource AccentBlack}, Dark={DynamicResource AccentBlack}}"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior
            StatusBarColor="{DynamicResource PageBackground}"
            StatusBarStyle="LightContent"/>
    </ContentPage.Behaviors>

    <Grid Padding="0"
            RowDefinitions="*,Auto,Auto">

        <!-- Instruction Label -->
        <Label
            Grid.Row="1"
            Text="{Binding Label2}"
            Style="{DynamicResource H2SemiBold24}"
            HorizontalTextAlignment="Center"
            FontSize="16"
            TextColor="{DynamicResource AccentWhite}"
            Margin="20,20,20,20"/>

        <!-- Footer: Info + Buttons -->
        <VerticalStackLayout Grid.Row="2"
                Margin="16">
            <Border Margin="0,15,0,15"
                    BackgroundColor="#33C3D8FB"
                    Style="{DynamicResource MainBorderStyle}">
                <Grid ColumnDefinitions="Auto,*"
                        ColumnSpacing="10">
                    <Label
                        Grid.Column="0"
                        FontSize="18"
                        Style="{DynamicResource LabelIconeStyle}"
                        Text="{DynamicResource IconInfo}"
                        TextColor="{DynamicResource AccentWhite}"/>
                    <Label
                        Text="{Binding Label1}"
                        Grid.Column="1"
                        Style="{DynamicResource BodyMedium12}"
                        FontSize="18"
                        TextColor="{DynamicResource AccentWhite}"
                        VerticalTextAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Capture Button -->
            <Grid ColumnDefinitions="50,*,50"
                    Margin="0,10,0,0">
                <ImageButton
                    Grid.Column="1"
                    Source="capture.png"
                    Command="{Binding CaptureCommand}"
                    HeightRequest="60"
                    VerticalOptions="End"
                    HorizontalOptions="Center"/>
            </Grid>
        </VerticalStackLayout>
    </Grid>
</ContentPage>