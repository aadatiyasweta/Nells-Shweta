<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="NellsPay.Send.Views.PopUpPages.LogOutPopUp"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    CanBeDismissedByTappingOutsideOfPopup="False"
    Color="Transparent">
    <Border
        Padding="30,30,30,0"
        StrokeShape="RoundRectangle 20,20,20,20"
        StrokeThickness="0"
        Style="{DynamicResource BorderBackground}">
        <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="20">
            <Label
                FontFamily="SFBlackMedium"
                FontSize="18"
                HorizontalTextAlignment="Center"
                Style="{DynamicResource HeaderLabelStyle}"
                Text="Logout"
                VerticalTextAlignment="Center" />
            <Label
                Grid.Row="1"
                FontFamily="SFRegular"
                FontSize="14"
                HorizontalTextAlignment="Center"
                Style="{DynamicResource HeaderLabelStyle}"
                Text="Are you sure you want to logout from applicaiton."
                VerticalTextAlignment="Center" />
            <StackLayout Grid.Row="2">
                <BoxView BackgroundColor="{DynamicResource Gray200}" HeightRequest="1" />
                <Grid ColumnDefinitions="*,*">
                    <Button
                        BackgroundColor="Transparent"
                        Clicked="Button_Clicked"
                        Text="Cancel"
                        TextColor="{DynamicResource NpBlue}" />
                    <Button
                        Grid.Column="1"
                        BackgroundColor="Transparent"
                        Clicked="LogOur"
                        Text="Log Out"
                        TextColor="{DynamicResource NpRed}" />
                </Grid>
            </StackLayout>
        </Grid>
    </Border>
</toolkit:Popup>